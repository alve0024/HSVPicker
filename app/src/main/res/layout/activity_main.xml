<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.algonquincollege.alve0024.hsvcolor.MainActivity">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/colorSwatch"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentStart="true"
        android:height="200dp"
        android:background="#000" />

    <TextView
        android:text="@string/hue_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/colorSwatch"
        android:layout_alignParentStart="true"
        android:layout_marginTop="13dp"
        android:id="@+id/hueLabel"
        android:layout_alignEnd="@+id/saturationLabel" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hueLabel"
        android:layout_alignParentStart="true"
        android:id="@+id/hueSB"
        android:layout_alignParentEnd="true"
        android:background="@drawable/hue"/>

    <TextView
        android:text="@string/saturation_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:id="@+id/saturationLabel"
        android:layout_below="@+id/hueSB"
        android:layout_alignParentStart="true" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/saturationSB"
        android:layout_below="@+id/saturationLabel"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/saturation"/>

    <TextView
        android:text="@string/lightness_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:id="@+id/lightnessLabel"
        android:layout_below="@+id/saturationSB"
        android:layout_alignParentStart="true" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lightnessSB"
        android:layout_below="@+id/lightnessLabel"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/lightness"/>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/lightnessSB"
        android:layout_alignParentStart="true"
        android:layout_marginTop="43dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <Button
                android:text="Button"
                android:layout_width="68dp"
                android:layout_height="match_parent"
                android:id="@+id/blackButton"
                android:background="@color/black" />

            <Button
                android:layout_width="68dp"
                android:layout_height="match_parent"
                android:id="@+id/redButton"
                android:background="@color/red" />

            <Button
                android:layout_width="68dp"
                android:layout_height="match_parent"
                android:id="@+id/limeButton"
                android:background="@color/lime" />

            <Button
                android:layout_height="match_parent"
                android:id="@+id/blueButton"
                android:background="@color/blue"
                android:layout_width="68dp" />

            <Button
                android:layout_height="match_parent"
                android:id="@+id/yellowButton"
                android:background="@color/yellow"
                android:layout_weight="0.36"
                android:layout_width="68dp" />

            <Button
                android:layout_width="68dp"
                android:layout_height="match_parent"
                android:id="@+id/cyanButton"
                android:layout_weight="0.41"
                android:background="@color/cyan" />

            <Button
                android:layout_width="68dp"
                android:layout_height="match_parent"
                android:id="@+id/margentaButton"
                android:layout_weight="1"
                android:background="@color/margenta" />

            <Button
                android:layout_width="68dp"
                android:layout_height="match_parent"
                android:id="@+id/silverButton"
                android:layout_weight="1"
                android:background="@color/silver" />

            <Button
                android:layout_width="68dp"
                android:layout_height="match_parent"
                android:id="@+id/grayButton"
                android:layout_weight="1"
                android:background="@color/gray" />

            <Button
                android:layout_width="68dp"
                android:layout_height="match_parent"
                android:id="@+id/marronButton"
                android:layout_weight="1"
                android:background="@color/marron" />

            <Button
                android:layout_width="68dp"
                android:layout_height="match_parent"
                android:id="@+id/oliveButton"
                android:layout_weight="1"
                android:background="@color/olive" />

            <Button
                android:layout_width="68dp"
                android:layout_height="match_parent"
                android:id="@+id/greenButton"
                android:layout_weight="1"
                android:background="@color/green" />

            <Button
                android:layout_width="68dp"
                android:layout_height="match_parent"
                android:id="@+id/purpleButton"
                android:layout_weight="1"
                android:background="@color/purple" />

            <Button
                android:layout_width="68dp"
                android:layout_height="match_parent"
                android:id="@+id/tealButton"
                android:layout_weight="1"
                android:background="@color/teal" />

            <Button
                android:layout_width="68dp"
                android:layout_height="match_parent"
                android:id="@+id/navyButton"
                android:layout_weight="1"
                android:background="@color/navy" />
        </LinearLayout>
    </HorizontalScrollView>

</RelativeLayout>
